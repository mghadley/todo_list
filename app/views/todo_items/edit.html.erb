<h1>Edit Your Todo</h1>

<%= form_for @todo_item do |f| %>
	<%= f.label :name %>
	<%= f.text_field :name %>
	<%= f.label :description %>
	<%= f.text_area :description %>
	<%= f.label :priority %>
	<%= f.number_field :priority %>
	<h6>If desired, assign a priority value of 1 or higher</h6>
	<%= f.check_box :completed%>
	<%= f.label :completed%>
	<%= f.submit %>
<% end %>
